{
  "ci": {
    "collect": {
      "staticDistDir": "./dist",
      "url": [
        "https://good-apps.jp/",
        "https://good-apps.jp/some-important-page"
      ],
      "settings": {
        "chromeFlags": "--no-sandbox --headless"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.80 }],
        "categories:accessibility": ["warn", { "minScore": 0.90 }]
      }
    }
  }
}
